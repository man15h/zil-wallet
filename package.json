{
  "name": "zillet",
  "version": "0.1.0",
  "description": "Lightweigh UI/UX focused Zilliqa wallet",
  "author": "man15h",
  "private": true,
  "scripts": {
    "dev": "cross-env NUXT_HOST=0.0.0.0 NUXT_PORT=8181 nuxt",
    "build": "nuxt build",
    "start": "cross-env NUXT_HOST=0.0.0.0 NUXT_PORT=80 nuxt start",
    "generate": "nuxt generate",
    "now-build": "nuxt build --spa",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest",
    "test-watch": "npm run test --watch",
    "snapshot": "jest --updateSnapshot"
  },
  "keywords": [
    "vue",
    "zilliqa",
    "jazzicon",
    "wallet",
    "nuxt"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.0.0",
    "@nuxtjs/pwa": "^3.0.0-beta.12",
    "@nuxtjs/tailwindcss": "^0.0.2",
    "@zilliqa-js/zilliqa": "^0.5.3",
    "balloon-css": "^0.5.0",
    "cross-env": "^5.2.0",
    "ethereum-blockies": "^0.1.1",
    "eva-icons": "^1.1.1",
    "nuxt": "^2.6.2",
    "qrcode": "^1.3.2",
    "vue-clipboard2": "^0.3.0",
    "vue-cryptoicon": "^0.1.5",
    "vue-jazzicon": "^0.1.3",
    "vue-moment": "^4.0.0",
    "vue-notifyjs": "^0.4.3",
    "vue2-filters": "^0.6.0"
  },
  "devDependencies": {
    "@vue/server-test-utils": "^1.0.0-beta.27",
    "@vue/test-utils": "^1.0.0-beta.27",
    "autoprefixer": "^8.6.4",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^24.1.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-vue-app": "^2.0.0",
    "canvas": "^2.2.0",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-vue": "^4.0.0",
    "husky": "^1.1.4",
    "jest": "^24.1.0",
    "jest-serializer-vue": "^2.0.2",
    "jsdom": "^12.2.0",
    "node-sass": "^4.10.0",
    "prettier": "1.14.3",
    "sass-loader": "^7.1.0",
    "tailwindcss": "^1.0.0-beta.4",
    "vue-jest": "^3.0.2"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env",
          "vue-app"
        ]
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/app/$1"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "snapshotSerializers": [
      "jest-serializer-vue"
    ]
  }
}
